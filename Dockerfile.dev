# Development Dockerfile - For running server with source mounting
FROM node:20-alpine

# Install build dependencies for native modules (sqlite3)
RUN apk add --no-cache python3 make g++ sqlite-dev

# Install just command runner from binary release (pinned version)
ENV JUST_VERSION=1.38.0
RUN cd /tmp && \
    curl -fsSL "https://github.com/casey/just/releases/download/${JUST_VERSION}/just-${JUST_VERSION}-x86_64-unknown-linux-musl.tar.gz" -o just.tar.gz && \
    tar -xzf just.tar.gz && \
    mv just /usr/local/bin/ && \
    rm -f just.tar.gz && \
    chmod +x /usr/local/bin/just

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm ci

# Copy source files
COPY . .

# Rebuild native modules for this platform
RUN npm rebuild better-sqlite3

ENV PORT=7853
ENV NODE_ENV=development

EXPOSE 7853

CMD ["node", "server/index.js"]
