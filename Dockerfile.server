# Server Dockerfile - Production build with static frontend
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files first (for better caching)
COPY package*.json ./

# Install build dependencies and all dependencies in one layer
# This layer only changes when package.json changes
RUN --mount=type=cache,target=/root/.npm \
    apk add --no-cache python3 make g++ sqlite-dev && \
    npm ci

# Copy source files
COPY . .

# Build frontend (this layer changes on any code change)
RUN --mount=type=cache,target=/root/.npm \
    npm run build

# Clean up dev dependencies to reduce image size
RUN npm prune --omit=dev

# Production stage
FROM node:20-alpine

# Install runtime dependencies and tools in one layer
# This layer only changes when we update tool versions
RUN apk add --no-cache sqlite bash git curl tar wget openssh ca-certificates && \
    JUST_VERSION=1.38.0 && \
    cd /tmp && \
    curl -fsSL "https://github.com/casey/just/releases/download/${JUST_VERSION}/just-${JUST_VERSION}-x86_64-unknown-linux-musl.tar.gz" -o just.tar.gz && \
    tar -xzf just.tar.gz && \
    mv just /usr/local/bin/ && \
    rm -f just.tar.gz && \
    chmod +x /usr/local/bin/just && \
    GH_VERSION=2.86.0 && \
    curl -fsSL "https://github.com/cli/cli/releases/download/v${GH_VERSION}/gh_${GH_VERSION}_linux_amd64.tar.gz" -o gh.tar.gz && \
    tar -xzf gh.tar.gz && \
    mv "gh_${GH_VERSION}_linux_amd64/bin/gh" /usr/local/bin/ && \
    rm -rf "gh_${GH_VERSION}_linux_amd64" gh.tar.gz && \
    chmod +x /usr/local/bin/gh

# Install Claude CLI globally (separate layer as it may update independently)
RUN --mount=type=cache,target=/root/.npm \
    npm install -g @anthropic-ai/claude-code

WORKDIR /app

# Copy package files
COPY package*.json ./

# Copy built files and node_modules from builder
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/server ./server
COPY --from=builder /app/shared ./shared
COPY --from=builder /app/node_modules ./node_modules

# Create database directory
RUN mkdir -p /app/server/database

# Create symlink for host user home (for plugins compatibility)
# Container uses /workspace as HOME, but plugins reference /home/oliveagle
RUN mkdir -p /home && ln -sf /workspace /home/oliveagle

# Create symlink for host mount point (for project path compatibility)
# Host mounts /mnt/volume3/data to /workspace, but projects use /mnt/volume3/data paths
RUN mkdir -p /mnt/volume3 && ln -sf /workspace /mnt/volume3/data

ENV PORT=7853
ENV NODE_ENV=production

EXPOSE 7853

CMD ["node", "server/index.js"]
