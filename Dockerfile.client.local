# Client Dockerfile - Development mode with hot reload (Local build with Tsinghua mirrors)
FROM node:20-alpine

# Use Tsinghua Alpine mirrors for China
RUN sed -i 's#https\?://dl-cdn.alpinelinux.org/alpine#https://mirrors.tuna.tsinghua.edu.cn/alpine#g' /etc/apk/repositories

# Install build dependencies for native modules
RUN apk update && apk add --no-cache python3 make g++ sqlite-dev

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source files
COPY . .

# Set environment variables
ENV VITE_PORT=5174
ENV PORT=7853
ENV NODE_ENV=development

EXPOSE 5174

CMD ["npx", "vite", "--host", "0.0.0.0"]
